datasource db {
  provider = "sqlite"
  url      = "file:../db/dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String
  password  String
  role      String
}

model Category {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  category  String
  product Product[] 
}

model Product {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  desc        String
  qty         Int
  price       Int
  img         String
  Available   Int
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}